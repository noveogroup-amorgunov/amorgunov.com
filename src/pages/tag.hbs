<div class="section">
  {{#> components/text type="body"}}
    Смотрите
    {{#> components/text type="bodyStrong"}}
      {{#> components/link href=(url '/tags/' '')}}все теги{{/ components/link}}
    {{/ components/text}}.
  {{/ components/text}}
</div>

{{#with (lookup collections tag) as |posts|}}
  {{> components/post-list posts=posts}}
{{/with}}
