<nav>
  <ul class="tag-list" aria-label="Список тегов">
    {{#each tags as |tag|}}
      {{#not (eq tag "posts")}}
        <li>
          <a href="{{{ append "/tags/" tag}}}" class="tag">
            {{#> components/text as="span" type="bodyStrong" class=""}}
              {{tag}}
            {{/ components/text}}
          </a>
        </li>
      {{/not}}
    {{/each}}
  </ul>
</nav>
